<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bottomSheetLayout"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_select_from_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_img_from_camera"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/lato_regular"
            android:layout_margin="10dp">
        </TextView>
        <TextView
            android:id="@+id/tv_select_from_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add From Gallery"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/lato_regular"
            android:layout_margin="10dp">
        </TextView>
        <TextView
            android:id="@+id/tv_select_from_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add From Facebook"
            android:textColor="@color/fb_blue"
            android:textSize="18sp"
            android:visibility="gone"
            android:fontFamily="@font/lato_regular"
            android:layout_margin="10dp">
        </TextView>
        <TextView
            android:id="@+id/tv_select_from_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add From Instagram"
            android:textColor="@color/insta_color"
            android:textSize="18sp"
            android:visibility="gone"
            android:fontFamily="@font/lato_regular"
            android:layout_margin="10dp">
        </TextView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>