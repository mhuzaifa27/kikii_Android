<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:layout_below="@+id/audience"
    tools:context=".Activities.SplashActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.lorentzos.flingswipe.SwipeFlingAdapterView
            android:id="@+id/swipe_frame"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rotation_degrees="16"
            android:visibility="gone"
            android:isScrollContainer="true"
            android:background="@color/white"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:layout_centerInParent="true"
            android:background="@color/white">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@color/white">

                <com.joooonho.SelectableRoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_user"
                    android:src="@drawable/image_7"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_weight="2.5"
                    app:sriv_left_top_corner_radius="10dp"
                    app:sriv_right_top_corner_radius="10dp"
                    app:sriv_left_bottom_corner_radius="50dp"
                    app:sriv_right_bottom_corner_radius="10dp" />
                <!--<ImageView
                    android:id="@+id/img_user"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/bg_one_corner_round_white"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:src="@drawable/image_7"></ImageView>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_user"
                    android:layout_marginTop="-100dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_clean"></ImageView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_request"></ImageView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_favurite"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_user"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="Jerry Kazz"
                            android:textColor="@color/black"
                            android:textSize="24sp"></TextView>

                        <TextView
                            android:id="@+id/tv_user_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text=", 24"
                            android:textColor="@color/black"
                            android:textSize="24sp"></TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_online"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_normal_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_user"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="8.2 miles away"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="normal"></TextView>

                        <TextView
                            android:id="@+id/tv_gender_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="Boy"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="normal"></TextView>

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="He / Has, man"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="normal"></TextView>

                        <ImageView
                            android:id="@+id/img_open_details"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/arrow_down_red"></ImageView>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_detail_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_user"
                        android:layout_marginBottom="30dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/ll_detail_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_gender_s2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="Boy"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:id="@+id/tv_gender2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="He / Has, man"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="normal"></TextView>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_distance2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="8.2 miles away"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="normal"></TextView>

                        </LinearLayout>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/ll_detail_2"
                            android:layout_marginTop="20dp"
                            android:alpha="0.3"
                            android:background="@color/light_grey">

                        </View>
                        <LinearLayout
                            android:id="@+id/ll_who_am_i"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:layout_below="@+id/view1"
                            android:layout_marginTop="20dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="Who Am I"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textAllCaps="true"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum."
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textAllCaps="false"
                                android:textStyle="normal"></TextView>

                        </LinearLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/ll_who_am_i"
                            android:layout_marginTop="20dp"
                            android:alpha="0.3"
                            android:background="@color/light_grey"/>

                        <LinearLayout
                            android:id="@+id/ll_curiosities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:layout_below="@+id/view2"
                            android:layout_marginTop="20dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="CURIOSITIES"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textAllCaps="true"
                                android:textStyle="bold"></TextView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                app:spanCount="2"
                                android:layout_marginTop="20dp"
                                tools:listitem="@layout/item_curiosities">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/ll_curiosities"
                            android:layout_marginTop="10dp"
                            android:alpha="0.3"
                            android:background="@color/light_grey"/>

                        <LinearLayout
                            android:id="@+id/ll_posts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:layout_below="@+id/view3"
                            android:layout_marginTop="20dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="POSTS"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textAllCaps="true"
                                android:textStyle="bold"></TextView>

                            <Button
                                android:id="@+id/btn_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_back_red"
                                android:fontFamily="@font/lato_bold"
                                android:text="View Posts"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white">

                            </Button>
                        </LinearLayout>

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/ll_posts"
                            android:layout_marginTop="20dp"
                            android:alpha="0.3"
                            android:background="@color/light_grey"/>

                        <LinearLayout
                            android:id="@+id/ll_friends"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:layout_below="@+id/view4"
                            android:layout_marginTop="20dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="FRIENDS"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textAllCaps="true"
                                android:textStyle="bold"></TextView>
                            <TextView
                                android:id="@+id/tv_friends_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="(105 friends)"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal"></TextView>

                            <Button
                                android:id="@+id/btn_view_friends"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_back_red"
                                android:fontFamily="@font/lato_bold"
                                android:text="View Friends"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white">

                            </Button>
                        </LinearLayout>

                        <View
                            android:id="@+id/view5"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/ll_friends"
                            android:layout_marginTop="20dp"
                            android:alpha="0.3"
                            android:background="@color/light_grey"/>

                        <LinearLayout
                            android:id="@+id/ll_linked_accounts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:layout_below="@+id/view5"
                            android:layout_marginTop="20dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="LINKED ACCOUNTS"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textAllCaps="true"
                                android:textStyle="bold"></TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="20dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/fb_logo_medium"
                                    android:layout_marginHorizontal="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/insta_logo_medium"
                                    android:layout_marginHorizontal="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/tiktok_logo_medium"
                                    android:layout_marginHorizontal="10dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/view6"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/ll_linked_accounts"
                            android:layout_marginTop="20dp"
                            android:alpha="0.3"
                            android:background="@color/light_grey"/>

                        <LinearLayout
                            android:id="@+id/ll_request_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:layout_below="@+id/view6"
                            android:layout_marginTop="20dp"
                            android:weightSum="1">


                            <Button
                                android:id="@+id/btn_add_friend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_back_red"
                                android:fontFamily="@font/lato_bold"
                                android:text="Add Friend"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="20dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_share"
                                    android:layout_marginHorizontal="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_block"
                                    android:layout_marginHorizontal="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_flag"
                                    android:layout_marginHorizontal="10dp"/>
                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_close_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/ll_request_options"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/arrow_up_red"></ImageView>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_transparent"
            android:orientation="horizontal"
            android:gravity="right|center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:layout_marginRight="20dp">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_git"
                android:layout_marginRight="20dp">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                android:layout_marginRight="20dp">
            </ImageView>
        </LinearLayout>

    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
