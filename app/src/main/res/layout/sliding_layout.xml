<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5">
            <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_view_pager"
                android:src="@drawable/ic_place_holder_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sriv_left_top_corner_radius="10dp"
                app:sriv_right_top_corner_radius="10dp"
                app:sriv_left_bottom_corner_radius="50dp"
                app:sriv_right_bottom_corner_radius="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_heading_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_view_pager"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:text="Heading"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_heading"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_description_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_heading_pager"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_regular"
            android:text="Lorem ipsome Lorem ipsome Lorem ipsome Lorem ipsome Lorem ipsome Lorem ipsome Lorem ipsome Lorem ipsome "
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_description"
            android:textStyle="normal"/>
    </LinearLayout>