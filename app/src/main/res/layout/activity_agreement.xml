<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.SignUpModule.AddProfileImageActivity">

    <include
        android:id="@+id/app_header"
        layout="@layout/app_header"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_header"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_find_your"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find your"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="34sp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/lato_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match"
            android:textAllCaps="true"
            android:layout_below="@+id/tv_find_your"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="51sp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/lato_bold">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/tv_find_your"
            android:src="@drawable/ic_fancy_heart">
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_next"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn More About The Privacy Policy and Term Of Services."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/lato_regular">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Agreeing, You are confirming that you are over the age of 18."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/lato_regular">

        </TextView>

    </LinearLayout>


        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_back_red"
            android:fontFamily="@font/lato_bold"
            android:text="Next"
            android:visibility="visible"
            android:textAllCaps="false"
            android:layout_marginBottom="50dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

</RelativeLayout>
