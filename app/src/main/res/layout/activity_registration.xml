<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".Activities.SignUpModule.RegistrationActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/app_logo" />

    <LinearLayout
        android:id="@+id/ll_texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_description_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_heading_pager"
                android:fontFamily="@font/lato_bold"
                android:text="YOUR NAME"
                android:textAllCaps="true"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_description"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/red_borders_white_back"
                android:hint="Jone Doe"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/lato_italic">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_heading_pager"
                android:fontFamily="@font/lato_bold"
                android:text="EMAIL"
                android:textAllCaps="true"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_description"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/red_borders_white_back"
                android:hint="someone@company.com"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/lato_italic">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_heading_pager"
                    android:fontFamily="@font/lato_bold"
                    android:text="BIRTHDAY"
                    android:textAllCaps="true"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_description"
                    android:textStyle="bold">
                </TextView>
                <LinearLayout
                    android:id="@+id/ll_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/red_borders_white_back_small">
                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="29-04-1990"
                        android:layout_gravity="center_vertical"
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/lato_italic">
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calender"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_heading_pager"
                    android:fontFamily="@font/lato_bold"
                    android:text="AGE"
                    android:textAllCaps="true"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_description"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_red_round"
                    android:hint="-- Years"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:fontFamily="@font/lato_bold">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_back_red"
        android:fontFamily="@font/lato_bold"
        android:text="Next"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/white">

    </Button>
</RelativeLayout>