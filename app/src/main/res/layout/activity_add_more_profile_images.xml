<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.SignUpModule.AddProfileImageActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        tools:context=".Activities.SignUpModule.AddProfileImageActivity">

        <include
            android:id="@+id/app_header"
            layout="@layout/app_header"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_header"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="@string/a_picture_paints_a_thousand_words"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@android:color/transparent">

                    <!-- <androidx.cardview.widget.CardView
                         android:layout_width="0dp"
                         android:layout_height="220dp"
                         android:layout_margin="5dp"
                         android:layout_weight="1.2"
                         android:padding="10dp"
                         android:elevation="10dp"
                         android:background="@drawable/bg_one_corner_round_white">

                         <ImageView
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:scaleType="centerCrop"
                             android:src="@drawable/image_6"></ImageView>
                     </androidx.cardview.widget.CardView>-->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1.3"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <!--<ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_flower">
                        </ImageView>-->
                        <com.joooonho.SelectableRoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/img_user"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image_7"
                            app:sriv_left_bottom_corner_radius="50dp"
                            app:sriv_left_top_corner_radius="10dp"
                            app:sriv_right_bottom_corner_radius="10dp"
                            app:sriv_right_top_corner_radius="10dp" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- <com.joooonho.SelectableRoundedImageView
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_centerInParent="true"
                                     android:src="@drawable/bg_one_corner_round_white"/>-->
                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_2"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_3"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_4"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_5"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_6"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_7"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joooonho.SelectableRoundedImageView
                                    android:id="@+id/img_selected_8"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bg_add_img_small"
                                    android:layout_centerInParent="true"
                                    app:sriv_left_bottom_corner_radius="30dp"
                                    app:sriv_left_top_corner_radius="10dp"
                                    android:scaleType="centerCrop"
                                    app:sriv_right_bottom_corner_radius="10dp"/>
                                <ImageView
                                    android:id="@+id/img_select_8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:visibility="visible"
                                    android:src="@drawable/red_add"></ImageView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_2"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_regular"
                        android:text="At least 3 pictures for verification"
                        android:textAllCaps="true"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="18sp">

                    </TextView>

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/btn_back_red"
                        android:fontFamily="@font/lato_bold"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
